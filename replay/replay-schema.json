{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://css-llm.dev/schema/replay-schema.json",
  "title": "Inference Replay Record",
  "type": "object",
  "required": [
    "version",
    "modelHash",
    "governanceHash",
    "kernelHash",
    "inputHash",
    "rngSeed",
    "samplingConfig",
    "outputHash",
    "proofHash"
  ],
  "properties": {
    "version": { "type": "string" },
    "modelHash": { "type": "string" },
    "governanceHash": { "type": "string" },
    "kernelHash": { "type": "string" },
    "inputHash": { "type": "string" },
    "rngSeed": { "type": "integer" },
    "samplingConfig": {
      "type": "object",
      "properties": {
        "temperature": { "type": "number" },
        "topP": { "type": "number" },
        "topK": { "type": "integer" }
      },
      "required": ["temperature", "topP", "topK"],
      "additionalProperties": false
    },
    "outputHash": { "type": "string" },
    "proofHash": { "type": "string" },
    "clusterNodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "nodeId": { "type": "string" },
          "expert": { "type": "integer" },
          "outputHash": { "type": "string" }
        },
        "required": ["nodeId", "expert", "outputHash"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
