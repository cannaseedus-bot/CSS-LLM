{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://css-llm.dev/schema/replay-schema.json",
  "title": "Inference Replay Record",
  "type": "object",
  "required": [
    "modelHash",
    "governanceHash",
    "kernelHash",
    "inputHash",
    "rngSeed",
    "samplingConfig",
    "outputHash"
  ],
  "properties": {
    "modelHash": { "type": "string" },
    "governanceHash": { "type": "string" },
    "kernelHash": { "type": "string" },
    "inputHash": { "type": "string" },
    "rngSeed": { "type": "integer" },
    "samplingConfig": {
      "type": "object",
      "properties": {
        "temperature": { "type": "number" },
        "topP": { "type": "number" },
        "topK": { "type": "integer" }
      },
      "required": ["temperature", "topP", "topK"],
      "additionalProperties": false
    },
    "outputHash": { "type": "string" }
  },
  "additionalProperties": false
}
